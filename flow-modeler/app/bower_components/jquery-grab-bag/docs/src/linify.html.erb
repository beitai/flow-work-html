<script type='text/javascript'>
  function effect() {
    $('.linify-fx').linify({className: 'fx-line'});
    
    function makeFader(ele) {
      return function() {
        $(ele).animate({opacity: 1, marginLeft: 0});
      }
    }
    
    var ix = 0;
    $('.linify-fx').find('.fx-line').css({
      opacity: 0, marginLeft: -200
    }).each(function(ix) {
      setTimeout(makeFader(this), ix * 150);
    });
  }
</script>

